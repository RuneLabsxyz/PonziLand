{
  "name": "@ponziland/ui",
  "version": "0.1.0",
  "description": "Shared UI components for PonziLand",
  "keywords": [
    "starknet",
    "ui",
    "components",
    "svelte",
    "sveltekit"
  ],
  "homepage": "https://ponzi.land",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RuneLabsxyz/PonziLand.git",
    "directory": "packages/ui"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "catalog:",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "publint": "^0.3.2",
    "svelte": "catalog:",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4"
  },
  "peerDependencies": {
    "svelte": "catalog:"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    },
    "./styles/*": {
      "import": "./dist/styles/*"
    },
    "./app.css": {
      "import": "./dist/app.css"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "build:css": "cp -r src/lib/styles dist/ && cp src/lib/app.css dist/",
    "build:static": "cp -r static dist/",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "build:assets": "node scripts/build-assets.js",
    "prepack": "svelte-kit sync && npm run build:assets && svelte-package && npm run build:css && npm run build:static && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check-types": "bun run check",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "clsx": "^2.0.0"
  }
}
