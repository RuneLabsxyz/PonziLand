{
  "name": "@ponziland/hyperlane-bridge",
  "version": "0.1.0",
  "description": "Hyperlane cross-chain bridge for multi-chain token transfers (Starknet, Solana, EVM)",
  "keywords": [
    "hyperlane",
    "bridge",
    "cross-chain",
    "starknet",
    "solana",
    "ethereum",
    "svelte"
  ],
  "homepage": "https://ponzi.land",
  "license": "MIT",
  "author": {
    "name": "PonziLand Team"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RuneLabsxyz/PonziLand/tree/main/pkgs/hyperlane-bridge"
  },
  "type": "module",
  "svelte": "./src/lib/index.ts",
  "main": "./src/lib/index.ts",
  "exports": {
    ".": {
      "svelte": "./src/lib/index.ts",
      "default": "./src/lib/index.ts"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "NODE_OPTIONS='--max-old-space-size=4096' svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "dependencies": {
    "@hyperlane-xyz/registry": "^23.1.0",
    "@hyperlane-xyz/sdk": "^18.2.0",
    "viem": "^2.0.0",
    "ethers": "^5.7.2"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "starknet": "^8.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
