{
  "field_descriptions": {
    "token": "The token used for this land. You pay taxes in this token.",
    "stake": "Your deposited funds. Taxes are paid from this. When it runs out, your land gets nuked!",
    "sell_price": "The price others must pay to buy your land. Higher price = higher taxes.",
    "income": "What you earn per hour from neighboring lands paying taxes to you.",
    "outgoing": "What you pay per hour in taxes to your neighbors.",
    "earnings": "Your net profit or loss per hour (income minus outgoing costs).",
    "nuke": "Time until your land explodes if stake runs out. Add more stake to extend this!"
  },
  "tax_field_descriptions": {
    "neighbors_slider": "Adjust this to simulate different neighbor scenarios. More neighbors = more taxes you pay, but also more potential income!",
    "net_yield": "Your hourly profit or loss. Green means you're earning more than you're paying in taxes. Red means you're losing money!",
    "payback_time": "How long until your yield covers the land purchase cost. Shorter is better!",
    "nuke_time": "How long your stake will last before running out. When it hits zero, your land gets nuked!",
    "sell_profit": "What you'll receive if someone buys your land (minus the 5% fee). Compare this to what you paid!"
  },
